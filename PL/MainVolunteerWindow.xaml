<Window x:Class="PL.MainVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Management" Height="700" Width="1200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <!-- Style for Buttons -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for TextBox -->
        <Style TargetType="TextBox" x:Key="StyledTextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Style for Labels -->
        <Style TargetType="Label" x:Key="HeaderLabelStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#D32F2F" />
            <Setter Property="BorderBrush" Value="#D32F2F" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Width" Value="250" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout with Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Text="Volunteer Management" FontSize="24" FontWeight="Bold" Margin="10" Grid.ColumnSpan="2" TextAlignment="Center" Foreground="Red"/>

        <!-- Left Side: Volunteer Details -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock Text="Volunteer Details:" FontSize="18" FontWeight="Bold" Margin="0,10" Foreground="Red"/>

            <!-- Volunteer Info -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="ID:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.Id}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Full Name:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.FullName}" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Phone:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.PhoneNumber}" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Email:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.Email}" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Password Hash:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.PasswordHash}" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Full Address:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.FullAddress}" Width="300"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Role:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.Role}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Active:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.IsActive}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Max Distance for Call:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.MaxDistanceForCall}" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Distance Type:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.DistanceType}" Width="300" IsReadOnly="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Total Completed Calls:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.TotalCompletedCalls}" Width="300" IsReadOnly="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Total Cancelled Calls:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.TotalCancelledCalls}" Width="300" IsReadOnly="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Total Expired Calls:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.TotalExpiredCalls}" Width="300" IsReadOnly="True" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Right Side: Call Details -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Current Call Details:" FontSize="18" FontWeight="Bold" Margin="0,10" Foreground="Red"/>

            <!-- Call Info -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Call ID:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.CallId, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Call Type:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.Call, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Description:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.Description, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Address:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.FullAddress, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Open Time:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.OpenTime, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Max Completion Time:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.MaxCompletionTime, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Start Time:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.StartTime, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Distance From Volunteer:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.DistanceFromVolunteer, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Status:" Width="200" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurrentVolunteer.CurrentCall.Status, Mode=TwoWay, TargetNullValue='N/A'}" Width="300" IsReadOnly="True" TextChanged="TextBox_TextChanged"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Bottom: Action Buttons (Horizontal) -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20">
            <Button Content="Finish Call" Style="{StaticResource RoundedButtonStyle}" Click="FinishCall_Click" Width="200" Height="60"/>
            <Button Content="Cancel Call" Style="{StaticResource RoundedButtonStyle}" Click="CancelCall_Click"  Width="200" Height="60"/>
            <Button Content="View Call History" Style="{StaticResource RoundedButtonStyle}" Click="ViewCallHistory_Click"  Width="200" Height="60"/>
            <Button Content="Select Call" Style="{StaticResource RoundedButtonStyle}" Click="SelectCall_Click"  Width="200" Height="60"/>
            <Button Content="Update Volunteer" Style="{StaticResource RoundedButtonStyle}" Click="UpdateVolunteer_Click"  Width="200" Height="60"/>
        </StackPanel>
    </Grid>
</Window>
