<Page x:Class="PL.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      Title="Login" Height="500" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for Title -->
            <RowDefinition Height="Auto"/>
            <!-- Row for User ID -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Password -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Show Password -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Login Button -->
            <RowDefinition Height="*"/>
            <!-- Row for Error Message -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" Text="      MDA Volunteer System" HorizontalAlignment="Left" Margin="52,10,0,10" Foreground="#D32F2F" Grid.ColumnSpan="2" Width="350"/>

        <!-- User ID -->
        <Label Content="User ID:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="UserIdTextBox" Grid.Row="1" Grid.Column="1" Margin="10,5,38,5" Padding="5" FontSize="18" FontWeight="Bold"/>

        <!-- Password -->
        <Label Content="Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" FontSize="18" FontWeight="Bold"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="10,5,38,5" Padding="5" FontSize="18" FontWeight="Bold" />

        <!-- TextBox for password (for showing the password when checkbox is checked) -->
        <TextBox x:Name="PasswordTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" Width="300" Visibility="Collapsed"/>

        <!-- Show Password Checkbox -->
        <CheckBox Content="Show Password" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,50" Width="327"
                  Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked" Grid.Column="1" FontWeight ="Bold" Grid.RowSpan="2"/>

        <!-- Login Button -->
        <Button Content="Login" Grid.Row="3" HorizontalAlignment="Left" Margin="10,19,0,254" Width="327" Click="LoginButton_Click"
                Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" BorderThickness="2" FontSize="16" FontWeight="Bold" Grid.Column="1" Grid.RowSpan="3"/>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessageTextBlock" Grid.Row="5" Grid.ColumnSpan="2" Foreground="Red" TextAlignment="Center" FontWeight="Bold" Margin="10,0,10,10" Height="239" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
