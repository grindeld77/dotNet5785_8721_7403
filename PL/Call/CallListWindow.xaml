<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Closed Call List" Height="500" Width="900">
    <Grid>
        <!-- טבלת נתונים להצגת הקריאות הסגורות -->
        <DataGrid ItemsSource="{Binding ClosedCalls}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                <DataGridTextColumn Header="Full Address" Binding="{Binding FullAddress}" />
                <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime, StringFormat=dd/MM/yyyy HH:mm}" />
                <DataGridTextColumn Header="Assigned Time" Binding="{Binding AssignedTime, StringFormat=dd/MM/yyyy HH:mm}" />
                <DataGridTextColumn Header="Closed Time" Binding="{Binding ClosedTime, StringFormat=dd/MM/yyyy HH:mm}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- כפתור לסגירת החלון -->
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="Close_Click" />
    </Grid>
</Window>
