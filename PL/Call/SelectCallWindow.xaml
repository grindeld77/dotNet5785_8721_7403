<Window x:Class="PL.Call.SelectCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Call Window" Height="800" Width="1000">
    <Grid Margin="10">
        <!-- סינון ומיון -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Filter and Sort Calls" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- סינון לפי סוג קריאה -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Filter by Call Type:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Source={StaticResource OpenCallCollectionTypeKey}}"
                          SelectedValue="{Binding SelectedCallType, Mode=TwoWay}" 
                          SelectedValuePath="."
                          Margin="0,0,10,0"/>
            </Grid>

            <!-- מיון לפי שדה -->
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Sort by:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Source={StaticResource OpenCallCollectionKey}}"
                          SelectedValue="{Binding SelectedSort, Mode=TwoWay}" 
                          SelectedValuePath="."
                          Margin="0,0,10,0"/>
            </Grid>
        </StackPanel>

        <!-- רשימת קריאות פתוחות -->
        <ListView Name="OpenCallsList" Margin="0,100,0,50" ItemsSource="{Binding OpenList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" DisplayMemberBinding="{Binding Id}" Width="120"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200"/>
                    <GridViewColumn Header="Distance (km)" DisplayMemberBinding="{Binding DistanceFromVolunteer}" Width="120"/>
                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding FullAddress}" Width="200"/>
                    <GridViewColumn Header="Open Time" DisplayMemberBinding="{Binding OpenTime}" Width="150"/>
                    <GridViewColumn Header="Max End Time" DisplayMemberBinding="{Binding MaxEndTime}" Width="150"/>
                    <GridViewColumn Header="Actions" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Select" Click="SelectCall_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
