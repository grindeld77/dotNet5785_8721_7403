<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Volunteers Management" Height="600" Width="800">
    <Window.Resources>
        <local:Converters x:Key="Converters" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center">
            <TextBlock Text="Volunteer Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <!-- ID -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="ID:" Width="100" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.Id}" Width="200">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="IsReadOnly" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAddMode}" Value="True">
                                    <Setter Property="IsReadOnly" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <!-- Password -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Password:" Width="100" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.PasswordHash}" Width="200" />
            </StackPanel>

            <!-- Full Name -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Full Name:" Width="100" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.FullName}" Width="200" />
            </StackPanel>

            <!--  Phone -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Phone:" Width="100" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.PhoneNumber}" Width="200" />
            </StackPanel>

            <!-- Email  -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Email:" Width="100" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.Email}" Width="200" />
            </StackPanel>

            <!-- Address -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Address:" Width="100" VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentVolunteer.FullAddress}" Width="200" />
            </StackPanel>

            <!--  Role -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Role:" Width="100" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding CurrentVolunteer.Role}" Width="200" />
            </StackPanel>

            <!-- IsActive -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Active:" Width="100" VerticalAlignment="Center" />
                <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive}" />
            </StackPanel>

            <!--Buttons  -->
            <StackPanel Orientation="Horizontal" Margin="0,20" HorizontalAlignment="Center">
                <Button Content="{Binding ButtonText}" Width="100" Margin="10" Click="SaveButton_Click" />
                <Button Content="Cancel" Width="100" Margin="10" Click="Cancel_Click" />
                <Button Content="Delete" Width="100" Margin="10" Click="DeleteButton_Click" Visibility="{Binding IsDeleteButtonVisible, Converter={StaticResource Converters}}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>