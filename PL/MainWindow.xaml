<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="1220"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed">

    <Window.Resources>
        <!-- Style for Buttons -->
        <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>

        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="StyledTextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Time Display Area -->
            <RowDefinition Height="Auto" />
            <!-- Call Summary Area -->
            <RowDefinition Height="Auto" />
            <!-- Buttons Area -->
            <RowDefinition Height="*" />
            <!-- Configuration Area -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Main content column -->
            <ColumnDefinition Width="Auto" />
            <!-- Right-side content (Call summary) -->
        </Grid.ColumnDefinitions>

        <!-- System Clock Area (Top-left) -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Height="71" Width="884">
            <Label Content="System Clock:" Style="{StaticResource LabelStyle}" FontSize="30" VerticalAlignment="Top" Height="68" Width="246"/>
            <Label Content="{Binding CurrentTime}" FontSize="20" FontWeight="Bold" Style="{StaticResource LabelStyle}" Height="49" Width="267"/>
        </StackPanel>

        <!-- Call Summary Area (Top-right) -->
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Label Content="Call Summary by Status:" Style="{StaticResource LabelStyle}" FontSize="20" Height="42" Width="250" />
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Open:" Style="{StaticResource LabelStyle}" Width="110"/>
                    <TextBlock Text="{Binding CallCountsByStatus[0]}" Style="{StaticResource StyledTextBlock}" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="InProgress:" Style="{StaticResource LabelStyle}" Width="110"/>
                    <TextBlock Text="{Binding CallCountsByStatus[1]}" Style="{StaticResource StyledTextBlock}" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Closed:" Style="{StaticResource LabelStyle}" Width="110"/>
                    <TextBlock Text="{Binding CallCountsByStatus[2]}" Style="{StaticResource StyledTextBlock}" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Expired:" Style="{StaticResource LabelStyle}" Width="110"/>
                    <TextBlock Text="{Binding CallCountsByStatus[3]}" Style="{StaticResource StyledTextBlock}" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="OpenAtRisk:" Style="{StaticResource LabelStyle}" Width="110"/>
                    <TextBlock Text="{Binding CallCountsByStatus[4]}" Style="{StaticResource StyledTextBlock}" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="InProgressAtRisk:" Style="{StaticResource LabelStyle}" Width="150"/>
                    <TextBlock Text="{Binding CallCountsByStatus[5]}" Style="{StaticResource StyledTextBlock}" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Clock Advancement Buttons Area (Center) -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,76,0,189">
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Minute" Click="AddOneMinute_Click" Width="160"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}" />
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Hour" Click="AddOneHour_Click" Width="160"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Day" Click="AddOneDay_Click" Width="160"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Month" Click="AddOneMonth_Click" Width="160"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Year" Click="AddOneYear_Click" Width="160"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,139,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">

            <Label Content="Configuration Variables:" Style="{StaticResource LabelStyle}"  HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- Risk Range Configuration -->
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="Risk Range (hours):" VerticalAlignment="Center" Foreground="#D32F2F" FontWeight="Bold" />
                <TextBox Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" Width="180" FontSize="20" Foreground="#D32F2F" FontWeight="Bold" IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Update" Click="UpdateRiskRange_Click" Width="160" IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
            </StackPanel>

            <!-- Buttons for Database Management -->
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Manage Volunteers" Click="btnVolunteer_Click" Width="160"/>
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Initialize Database" Click="btnInitializeDB_Click" Width="160"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Reset Database" Click="btnResetDB_Click" Width="160" IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}"/>
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Manage Calls" Click="btnManageCalls_Click" Width="160"/>
            </StackPanel>
        </StackPanel>

        <!-- Simulator Start Area -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="3" Height="234" Width="884">
            <Label Content="&#xD;&#xA;Simulator:" Style="{StaticResource LabelStyle}" Height="74" Width="139" FontSize="20"/>
            <Button Style="{StaticResource RoundedButtonStyle}" Click="StartSimulator_Click" Width="160" Content="{Binding IsSimulatorRunning, Converter={StaticResource SimulatorButtonContentConverter}}"/>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                <Label Content="Interval (minutes per second):" VerticalAlignment="Center" Foreground="#D32F2F" FontWeight="Bold" />
                <TextBox Text="{Binding Interval, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource InverseBooleanConverter}}" Width="180" FontSize="20" Foreground="#D32F2F" FontWeight="Bold" Height="40" />
            </StackPanel>
        </StackPanel>

        <!-- Configuration Variables Area (Bottom) -->
    </Grid>
</Window>
