<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed">

    <Window.Resources>
        <!-- Style for Buttons -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Style for Labels -->
        <Style TargetType="Label" x:Key="HeaderLabelStyle">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="DarkRed" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <!-- Style for TextBox -->
        <Style TargetType="TextBox" x:Key="StyledTextBox">
      
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Foreground" Value="DarkRed" />
            <Setter Property="BorderBrush" Value="DarkRed" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
    </Window.Resources>

    <Grid Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Define the structure of rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- System Clock Area -->
            <RowDefinition Height="Auto" />
            <!-- Clock Advancement Buttons Area -->
            <RowDefinition Height="*" />
            <!-- Configuration Variables Area -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- System Clock Area -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- System Clock -->
            <Label Content="System Clock:" Style="{StaticResource HeaderLabelStyle}" />
            <Label x:Name="lblClock" Content="{Binding CurrentTime}" FontSize="20" FontWeight="Bold" Foreground="Black" />
        </StackPanel>

        <!-- Clock Advancement Buttons Area -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Minute" Click="AddOneMinute_Click" />
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Hour" Click="AddOneHour_Click" />
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Day" Click="AddOneDay_Click" />
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Month" Click="AddOneMonth_Click" />
            <Button Style="{StaticResource RoundedButtonStyle}" Content="Add One Year" Click="AddOneYear_Click" />
        </StackPanel>

        <!-- Configuration Variables Area -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Label Content="Configuration Variables:" Style="{StaticResource HeaderLabelStyle}" />

            <!-- Risk Range Configuration -->
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Label Content="Risk Range (hours):" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" />
                <TextBox x:Name="txtRiskRange" Style="{StaticResource StyledTextBox}" Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" />
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Update" Click="UpdateRiskRange_Click" />
            </StackPanel>

            <!-- Buttons for Database Management -->
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Show List View" Click="btnVolunteer_Click" />
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Initialize Database" Click="btnInitializeDB_Click" />
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Reset Database" Click="btnResetDB_Click" />
                <Button Style="{StaticResource RoundedButtonStyle}" Content="Manage Calls" Click="btnManageCalls_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
