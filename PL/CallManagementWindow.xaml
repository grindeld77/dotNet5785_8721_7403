<Window x:Class="PL.CallManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="Call Management" Height="640" Width="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filtering and Grouping Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Label Content="Filter by Status:" VerticalAlignment="Center" />
            <ComboBox ItemsSource="{Binding Source={StaticResource CallCollectionFilterKey}}" 
                      SelectedValue="{Binding SelectedFilter}" 
                      Margin="5" Width="150"/>

            <Label Content="Sort by:" VerticalAlignment="Center" Margin="20,0,0,0" />
            <ComboBox ItemsSource="{Binding Source={StaticResource CallCollectionSortKey}}"
                      SelectedValue="{Binding SelectedSort}" 
                      Margin="5" Width="150"/>
        </StackPanel>

        <!-- Calls ListView -->
        <ListView ItemsSource="{Binding CallList}" Grid.Row="1" Margin="10"
                  MouseDoubleClick="ListView_MouseDoubleClick" 
                  IsSynchronizedWithCurrentItem="True" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" DisplayMemberBinding="{Binding Id}" Width="100" />
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="120" />
                    <GridViewColumn Header="Remaining Time" DisplayMemberBinding="{Binding RemainingTime}" Width="150" />
                    <GridViewColumn Header="Last Volunteer" DisplayMemberBinding="{Binding LastVolunteer}" Width="150" />
                    <GridViewColumn Header="Total Assignments" DisplayMemberBinding="{Binding TotalAssignments}" Width="150" />

                    <!-- Boolean Column with CheckBox -->
                    <GridViewColumn Header="Is Active" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsEnabled="False" IsChecked="{Binding IsActive}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Actions" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Delete" 
                                            Command="{Binding DataContext.DeleteCallCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                            CommandParameter="{Binding}" 
                                            Visibility="{Binding CanDelete, Converter={StaticResource BoolToVisibilityConverter}}" 
                                            Margin="5" />
                                    <Button Content="Unassign" 
                                            Command="{Binding DataContext.UnassignCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                            CommandParameter="{Binding}" 
                                            Visibility="{Binding CanUnassign, Converter={StaticResource BoolToVisibilityConverter}}" 
                                            Margin="5" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Add Call Button -->
        <Button Content="Add Call" Grid.Row="2" Height="40" Width="120" HorizontalAlignment="Center" Margin="10"
                 Click="AddButton_Click" />
    </Grid>
</Window>
