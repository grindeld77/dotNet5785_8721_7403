<Window x:Class="PL.CallManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Call Management" 
        Loaded="Window_Loaded" Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Height="640" Width="700">

    <Window.Resources>
        <local:CallStatusToIsActiveConverter x:Key="CallStatusToIsActiveConverter" />

        <!-- Style definitions remain unchanged -->
        <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style TargetType="Label" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>

        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListView" x:Key="StyledListView">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="StyledTextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filtering and Grouping Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Label Content="Filter by Status:" VerticalAlignment="Center" Style="{StaticResource LabelStyle}" />
            <ComboBox ItemsSource="{Binding Source={StaticResource CallCollectionFilterKey}}" 
                      SelectedValue="{Binding SelectedFilter}" 
                      Style="{StaticResource ComboBoxStyle}" />

            <Label Content="Sort by:" VerticalAlignment="Center" Margin="20,0,0,0" Style="{StaticResource LabelStyle}" />
            <ComboBox ItemsSource="{Binding Source={StaticResource CallCollectionSortKey}}"
                      SelectedValue="{Binding SelectedSort}" 
                      Style="{StaticResource ComboBoxStyle}"/>
        </StackPanel>

        <!-- Calls ListView -->
        <ListView ItemsSource="{Binding CallList}" Grid.Row="1" Margin="10" Style="{StaticResource StyledListView}"
                  MouseDoubleClick="ListView_MouseDoubleClick" SelectedItem="{Binding SelectedCall}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" DisplayMemberBinding="{Binding CallId}" Width="100" />
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="120" />
                    <GridViewColumn Header="Remaining Time" DisplayMemberBinding="{Binding RemainingTime}" Width="150" />
                    <GridViewColumn Header="Last Volunteer" DisplayMemberBinding="{Binding LastVolunteer}" Width="150" />
                    <GridViewColumn Header="Total Assignments" DisplayMemberBinding="{Binding TotalAssignments}" Width="150" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Add Call Button -->


        <!-- Action Buttons Section (bottom) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="10" VerticalAlignment="Center">
            <Button Content="Add Call" Grid.Row="2" HorizontalAlignment="Center" Style="{StaticResource RoundedButtonStyle}" 
                Click="AddButton_Click" />
            <Button Content="Delete" Click="DeleteButton_Click" 
                    Style="{StaticResource RoundedButtonStyle}" Margin="10" IsEnabled="{Binding IsSelectedCall}" />
            <Button Content="Unassign" Click="UnassignButton_Click" 
                    Style="{StaticResource RoundedButtonStyle}" Margin="10" IsEnabled="{Binding IsSelectedCall}" />
        </StackPanel>
    </Grid>
</Window>
